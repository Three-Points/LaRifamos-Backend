model Product {
  id           Int            @id @default(autoincrement())
  name         String
  details      String
  marketCost   Float          @map("market_cost")
  state        ProductState
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @default(now()) @map("updated_at")
  productImage ProductImage[]

  @@map("product")
}

model ProductImage {
  id  Int
  url String

  product Product @relation(fields: [id], references: [id])

  @@unique([id, url])
  @@map("product_image")
}

enum ProductState {
  NEW  @map("new")
  USED @map("used")
}
